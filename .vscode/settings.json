  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.g.dart": false
  },
  "dart.lineLength": 120,
  // "dart.doNotFormat": [
  //   "**/test/prefer_trailing_comma/test_data.dart",
  //   "**/test/prefer_trailing_comma/test_data_extended.dart",
  // ],

  "[dart]": {
    "editor.formatOnSave": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  "[shellscript]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  "[go]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  "dart.analysisExcludedFolders": [ "build", "release", "macos", "linux" ]
}
